<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fast Food</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
    <%- include('../partials/nav') %>
        <div class="my-3 d-flex justify-content-between align-items-center">
            <h1>Categorylar</h1>
            <a href="/api/categories/create" class="btn btn-primary" role="button">Categorylar Qo'shish</a>
        </div>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th class="col-2" scope="col">Photo</th>
                    <th class="col-2" scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% category.forEach((category, i)=> { %>
                    <tr>
                        <th>
                            <%= i + 1 %>
                        </th>
                        <td>
                            <%= category.name %>
                        </td>
                        <td>
                            <img src="<%= category.photo %>" alt="<%= category.name %>" width="50" height="50"
                                class="img-fluid">
                        </td>
                        <td class="d-flex gap-3">
                            <a class="btn btn-success" href="/api/categories/<%= category.id %>">Ko'rish</a>
                            <a class="btn btn-warning" href="/api/categories/<%= category.id %>/edit">Tahrirlash</a>
                            <form action="/api/categories/<%= category.id %>/delete" method="post">
                                <button class="btn btn-danger" type="submit">O'chirish</button>
                            </form>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>