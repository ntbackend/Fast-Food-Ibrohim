<div class="card mt-3" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">
            <%= `${product.name}` %>
        </h5>
    </div>
    <ul class="list-group list-group-flush">
        <p>
            <img src="<%= product.photo %>" alt="">
        </p>
    </ul>
    <div class="card-body">
        <hr>
        <a href="/api/products/<%= product.id %>/edit" class="btn btn-warning me-3">Tahrirlash</a>
        <form class="d-inline" action="/api/products/<%= product.id %>/delete" method="delete">
            <button class="btn btn-danger" type="submit">O'chirish</button>
        </form>
        <hr>
    </div>
</div>